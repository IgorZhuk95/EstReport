@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="@Url.Content("~/Scripts/lib/jquery.min.js")" type="text/javascript"></script> <!--1.11.2-->
    <link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/bootstrap.min.css")' />
    <link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/Site.css")' />
    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" />

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">CIBuilds</a>
            </div>
            <ul class="nav navbar-nav pointer">
                <li class="active"><a>Login</a></li>
            </ul>
        </div>
    </nav>


    <div id="loginwindow" class="loginwindow">
        <form action="~/Login/Login" method="post">
            <span class="lg-dlg-label">User name: </span><input class="lg-dlg-entry" id="username" type="text" name="username" />
            <span class="lg-dlg-label">Password: </span><input class="lg-dlg-entry" type="password" name="password" />
            <div class="loginError">@ViewBag.loginFailed</div>
            <input class="btn btn-default login-btn" type="submit" value="Login" />
        </form>

    </div>


    <script type="text/javascript">

    AppBaseURL = "@Url.Content("~/")";

    jQuery(function ($) {
        $("#username").focus();

        $(".navbar-brand").on("click", function () {
            showVersion();
        });
    });

    </script>

</body>
</html>